pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/YourUsername/explainable-ai-audit.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat '''
                python -m venv venv
                call venv\\Scripts\\activate
                pip install -r requirements.txt
                '''
            }
        }

        stage('Run Explainable AI Tool') {
            steps {
                bat '''
                call venv\\Scripts\\activate
                python main.py
                '''
            }
        }
    }
}
